<div class="post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="editPostForm" class="card-body">
        <input type="hidden" id="postId" value="{{post.Id}}" required/>
        <label class="form-label" for="title">Title</label>
        <input type="text" id="postTitle" value="{{post.title}}" class="form-input" required/>
        <label class="form-label" for="PostBody">Text</label>
        <textarea id="postBody" class="form-input" required>{{post.Body}}</textarea>
        <button type="submit" id="editPostBtn" class="btn">Edit Post</button>
        <button type="button" id="deletePostBtn" class="btn">Delete Post</button>
    </form>
</div>


<script src="/Develop/public/js/editpost.js"></script>