<div class="post">
    <article class="card">
        <div classs="card-header flex-row justify-content-between">
        <h2>{{post.title}}</h2>
    </div>
        posted by {{post.user.username}} on {{formatDate post.createdAt}}
    </div>
    <div class="card-body">
        {{post.body}}
    </div>
</article>

{{#if post.comments}}

<section class="card">
    <div class="card-header">
        <h2>Comments</h2>
    </div>

    <div class="card-body">
        {{#each post.comments}}
        <div>
            <p>{{this.body}}</p>
            <p>&mdash; {{this.user.username}}, {{formatDate this.createdAt}}</p>
        </div>
        {{/each}}

    <div class="card-footer">
        <p>Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
    </div>